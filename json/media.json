{
  "$id": "https://raw.githubusercontent.com/ker0olos/fable/main/json/media.json",
  "type": "object",
  "title": "media",
  "additionalProperties": false,
  "properties": {
    "id": {
      "title": "id",
      "type": "string",
      "description": "A unique alphanumeric id",
      "pattern": "^[-_a-z0-9]+$",
      "minLength": 1,
      "maxLength": 20
    },
    "added": {
      "title": "added",
      "type": "string"
    },
    "updated": {
      "title": "updated",
      "type": "string"
    },
    "type": {
      "title": "type",
      "type": "string",
      "enum": ["ANIME", "MANGA", "OTHER"],
      "description": "Choose what type of media this is"
    },
    "format": {
      "title": "format",
      "type": "string",
      "description": "Choose what format of media this is",
      "enum": [
        "TV",
        "TV_SHORT",
        "MOVIE",
        "SPECIAL",
        "OVA",
        "ONA",
        "MUSIC",
        "MANGA",
        "VIDEO_GAME",
        "NOVEL",
        "ONE_SHOT"
      ]
    },
    "title": {
      "title": "title",
      "description": "The title of the media",
      "$ref": "alias.json"
    },
    "popularity": {
      "title": "popularity",
      "type": "integer",
      "description": "The popularity of the media (the number of followers or people who read/watch it) (responsible for the rating/stars of characters)",
      "minimum": 0,
      "maximum": 2147483647
    },
    "description": {
      "title": "description",
      "type": "string",
      "description": "Add a description about this media",
      "maxLength": 2048
    },
    "images": {
      "title": "images",
      "description": "A set of images featuring this media",
      "$ref": "image.json"
    },
    "trailer": {
      "title": "trailer",
      "type": "object",
      "description": "A url to a trailer about the media",
      "additionalProperties": false,
      "required": ["site", "id"],
      "properties": {
        "site": {
          "type": "string",
          "enum": ["youtube"],
          "description": "The name of the site (only supports youtube)"
        },
        "id": {
          "title": "id",
          "type": "string",
          "description": "The id of the video",
          "pattern": "([A-Za-z0-9_\\-]{11})"
        }
      }
    },
    "externalLinks": {
      "title": "external links",
      "type": "array",
      "description": "A list of urls for the media's pages on various platforms",
      "items": {
        "title": "external link",
        "type": "object",
        "additionalProperties": false,
        "required": ["site", "url"],
        "properties": {
          "site": {
            "type": "string",
            "description": "The title of the site"
          },
          "url": {
            "type": "string",
            "pattern": "^(https:\\/\\/)?(www\\.)?(youtube\\.com|twitch\\.tv|netflix\\.com|crunchyroll\\.com|tapas\\.io|webtoons\\.com|amazon\\.com)[\\S]*$",
            "description": "The full url of the site"
          }
        }
      }
    },
    "relations": {
      "title": "relations",
      "type": "array",
      "description": "Define the relations between this media and other media",
      "items": {
        "title": "relation",
        "type": "object",
        "additionalProperties": false,
        "required": ["relation", "mediaId"],
        "properties": {
          "relation": {
            "title": "relation",
            "type": "string",
            "description": "Choose the kind of relationship between this media a different media",
            "enum": [
              "PREQUEL",
              "SEQUEL",
              "PARENT",
              "CONTAINS",
              "SIDE_STORY",
              "SPIN_OFF",
              "ADAPTATION",
              "OTHER"
            ]
          },
          "mediaId": {
            "title": "mediaId",
            "type": "string",
            "description": "Reference an existing media ([pack:]id)",
            "pattern": "^([-_a-z0-9]+)(:[-_a-z0-9]+)?$"
          }
        }
      }
    },
    "characters": {
      "title": "characters",
      "type": "array",
      "description": "A list of characters that appear in the media",
      "items": {
        "title": "character",
        "type": "object",
        "additionalProperties": false,
        "required": ["role", "characterId"],
        "properties": {
          "role": {
            "title": "role",
            "type": "string",
            "description": "Choose the role the character plays in the media",
            "enum": ["MAIN", "SUPPORTING", "BACKGROUND"]
          },
          "characterId": {
            "title": "characterId",
            "type": "string",
            "description": "Reference an existing character ([pack:]id)",
            "pattern": "^([-_a-z0-9]+)(:[-_a-z0-9]+)?$"
          }
        }
      }
    }
  }
}
